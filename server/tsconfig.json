{
	"compilerOptions": {
		"strict": true,
		"target": "ES2022",
		"outDir": "build/",
		"module": "CommonJS",
		"esModuleInterop": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"removeComments": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "**/*.test.ts"]
}
